<div class="statistics-page">
  <h2 class="statistics-heading">&gt;&gt; DATABASE STATISTICS</h2>
  <div class="stats-summary">
    <div class="stat-card">
      <h3 class="stat-title">TOTAL_MOVIES</h3>
      <p class="stat-value"><%= @statistics[:total_movies] %></p>
    </div>
    <div class="stat-card">
      <h3 class="stat-title">TOTAL_MEDIA_SIZE</h3>
      <p class="stat-value"><%= @statistics[:total_size_gb] %> GB</p>
    </div>
    <div class="stat-card">
      <h3 class="stat-title">TOTAL_WATCH_TIME</h3>
      <p class="stat-value"><%= @statistics[:total_runtime_hours] %> Hours</p>
    </div>
  </div>
  <div class="stats-lists">
    <div class="stat-list-card">
      <h3 class="section-title">&gt;&gt; TOP 10 GENRES</h3>
      <ul class="stat-list">
        <% @statistics[:movies_per_genre].each do |g| %>
          <li class="stat-list-item">
            <span class="stat-list-name"><%= g[:genre_name] %></span>
            <span class="stat-list-value"><%= g[:count] %></span>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="stat-list-card">
      <h3 class="section-title">&gt;&gt; MOVIES PER YEAR</h3>
      <ul class="stat-list scrollable">
        <% @statistics[:movies_per_year].each do |y| %>
          <li class="stat-list-item">
            <span class="stat-list-name"><%= y[:year] %></span>
            <span class="stat-list-value"><%= y[:count] %></span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <p><a href="/movies">[BACK_TO_LIST]</a></p>
</div>
